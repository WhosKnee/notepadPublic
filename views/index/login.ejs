<% include ../partials/header %>



<div id="loginForm">
    <p>Login</p>
    <form action="/login" method="POST">
        <i class="far fa-user"></i><span id="username">Username:</span>
        <input class="cred" type="text" name="username" placeholder="Username" onblur="this.placeholder = 'Username'" onfocus="this.placeholder = ''"></input>
        <i class="fas fa-fingerprint"></i><span id="password">Password:</span>
        <input class="cred" type="password" name="password" placeholder="Password" onblur="this.placeholder = 'Password'" onfocus="this.placeholder = ''">
        <button id="submit" class="btn btn-outline-dark">Login</button>
        <!--Redirect to Homepage or Sign up form-->
        <pre>   <a href="/register">Sign Up</a>    <a href="/">Go Back</a></pre>
    </form>
</div>
