<% include ./partials/header %>
            <div class="jumbotron">
                <h1 class="display 4">Welcome to the notepad web app <%= currentUser.username %></h1>
                <span class="lead"> Start writing away, you'll love it.</span>
                <span class="auth">Sign out</span>
                <span class="auth">Login</span>
                <hr class="my-2">
                <button type="button" class="btn btn-dark" onclick="newNote()">New Note</button>
                
            </div>
            <div class="row" id="pageRow">
                <div id="left" class="rightBorder col-lg-3 col-sm-6 col-12">
                    <form class="newNote" id="newNote">
                        <h6 class="textField">Text field below:</h6>
                        <input type="text" id="title" class="form-control" placeholder="Title">
                        <input type="text" id="textFill" class="form-control" placeholder="Text">
                        <button type="button" id="save" required="required" class="btn btn-dark btn-sm" onclick="saveNote()">Save Note</button>
                        <button type="button" id="delete" required="required" class="btn btn-secondary btn-sm" onclick="deleteNote()">Delete Note</button>
                    </form>
                </div>
                <div class="col-lg-9 col-sm-6 col-12" id="pastNotes">
                    <div class="row" id="holdNotes">
                    </div>
                </div> 
            </div>

<% include ./partials/footer %>
